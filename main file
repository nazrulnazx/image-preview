<script>
function upload_preview(THIS,preview) {
        console.log(preview);
        var reader = new FileReader();
        reader.onload = function (e) {
            $('#'+preview).attr('src', e.target.result);
        }
        reader.readAsDataURL(THIS.files[0]);
    } //naz to git

</script>
